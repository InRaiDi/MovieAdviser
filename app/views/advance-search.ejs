<%- include('partials/header.ejs'); %>
 <!-- ======= Breadcrumbs ======= -->
 <section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center">
        <h2>Advanced Search </h2>
        <ol>
          <li><a href="/">Home</a></li>
          <li>Advanced Search</li>
        </ol>
      </div>

    </div>
  </section><!-- End Breadcrumbs -->
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  
  <div class="container">
      <br>
      <br>
    <div class="section-title">
        <h2>Search</h2>
        <p>Advanced Search</p>
      </div>
  </div>
  <!--Advance Search-->
  <div class="container text-center">
 
	<div id="search">
		<form id="search-form" action="/search_movies" method="POST">
    
			<div class="form-group col-12">
        <% if(typeof movieTitle === 'undefined') { %>
				<input class="form-control" type="text" autocomplete="off" name="movieTitle" id="movieTitle" placeholder="Search" value="" />
        <% } else { %>
        <input class="form-control" type="text" autocomplete="off"  name="movieTitle" id="movieTitle" placeholder="Search" value="<%= movieTitle %>" />
        <% } %>
   
	</div>
    
	<div class="" id="filter">
        <div class="row">
            <div class="form-group col-sm-4 col-xs-6">
				<select data-filter="language" name="language" id="language" class="filter-make filter form-control">
          <% if(typeof language === 'undefined' || language === "") { %>
              
            <option value="">Select Language</option>
            <option value="en">English</option>
            <option value="ru">Russian</option>
            <option value="hi">Hindi</option>
            <option value="es">Spanish</option>
          
        <% } else if (language === "en") { %> 
            <option value="">Select Language</option>
            <option value="en" selected="selected">English</option>
            <option value="ru">Russian</option>
            <option value="hi">Hindi</option>
            <option value="es">Spanish</option>
        <% } else if (language === "ru") { %> 
            <option value="">Select Language</option>
            <option value="en">English</option>
            <option value="ru" selected="selected">Russian</option>
            <option value="hi">Hindi</option>
            <option value="es">Spanish</option>
        <% } else if (language === "hi") { %> 
            <option value="">Select Language</option>
            <option value="en">English</option>
            <option value="ru">Russian</option>
            <option value="hi" selected="selected">Hindi</option>
            <option value="es">Spanish</option>
        <% } else if (language === "es") { %> 
            <option value="">Select Language</option>
            <option value="en">English</option>
            <option value="ru">Russian</option>
            <option value="hi">Hindi</option>
            <option value="es" selected="selected">Spanish</option>
        <% } %>
				</select>
			</div>
			<div class="form-group col-sm-4 col-xs-6">
				<select data-filter="type" name="year" id="year" class="filter-type filter form-control">
					<% if(typeof year === 'undefined' || year === "") { %>
            <option value="">Select Year</option>
            <option value="2021">2021</option>
            <option value="2020">2020</option>
            <option value="2019">2019</option>
            <option value="2018">2018</option>
            <option value="2017">2017</option>
            <% } else if (year === "2021") { %> 
            <option value="">Select Year</option>
            <option value="2021" selected="selected">2021</option>
            <option value="2020">2020</option>
            <option value="2019">2019</option>
            <option value="2018">2018</option>
            <option value="2017">2017</option>
            <% } else if (year === "2020") { %> 
              <option value="">Select Year</option>
              <option value="2021" >2021</option>
              <option value="2020" selected="selected">2020</option>
              <option value="2019">2019</option>
              <option value="2018">2018</option>
              <option value="2017">2017</option>
              <% } else if (year === "2019") { %> 
                <option value="">Select Year</option>
                <option value="2021">2021</option>
                <option value="2020">2020</option>
                <option value="2019" selected="selected">2019</option>
                <option value="2018">2018</option>
                <option value="2017">2017</option>
                <% } else if (year === "2018") { %> 
                  <option value="">Select Year</option>
                  <option value="2021" >2021</option>
                  <option value="2020">2020</option>
                  <option value="2019">2019</option>
                  <option value="2018" selected="selected">2018</option>
                  <option value="2017">2017</option>
                  <% } else if (year === "2017") { %> 
                    <option value="">Select Year</option>
                    <option value="2021" >2021</option>
                    <option value="2020">2020</option>
                    <option value="2019">2019</option>
                    <option value="2018">2018</option>
                    <option value="2017" selected="selected">2017</option>
                  <% } %>
				</select>
			</div>
          
			<div class="form-group col-sm-4 col-xs-6">
          <label>Rating: 0</label>
          <% if(typeof movieRating === 'undefined' || movieRating === "") { %>
				<input type="range" id="movieRating" name="movieRating" min="0" max="10" step="0.1">
        <% } else { %>
          <input type="range" id="movieRating" name="movieRating" min="0" max="10" step="0.1" value="<%= movieRating %>">
        <%} %>
            <label>10</label>
      </div>
        <center><div class="form-group col-5 ">
          <button type="submit" class="btn btn-block btn-danger">Search</button>
      </div>
        </center>
		</form>
	</div>
</div>
<div class="container">
    <div class="container">
        <br>
        <br> <br>
        <br>
      <div class="section-title">
          <h2>Search</h2>
          <p>Search Results</p>
        </div>
    </div>
    <section id="latest-movies" class="portfolio">
	<div class="row portfolio-container">
        <% data.movies.forEach(item=> { %>
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <div class="portfolio-wrap">
            <img src="http://image.tmdb.org/t/p/w400/<%=item.posterPath %>" class="img-fluid" alt="">
            <div class="portfolio-info">
              <h4><%=item.title %></h4>
              <p class="max-lines"><%=item.overview %></p>
              <div class="portfolio-links">
                <a href="http://image.tmdb.org/t/p/w400/<%=item.posterPath %>" data-gall="portfolioGallery" class="venobox" title="App 1"><i class="bx bx-plus"></i></a>
                <a onclick='movieSelected("<%=item.id %>")' href="#" data-gall="portfolioDetailsGallery" data-vbtype="iframe" title="Portfolio Details"><i class="bx bx-link"></i></a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
      </section>
</div>

<script src="js/movie.js"></script>
<%- include('partials/footer.ejs'); %>