<%- include('partials/header.ejs'); %>
 <!-- ======= Breadcrumbs ======= -->
 <section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

      <div class="d-flex justify-content-between align-items-center">
        <h2>Advanced Search </h2>
        <ol>
          <li><a href="/">Home</a></li>
          <li>Advanced Search</li>
        </ol>
      </div>

    </div>
  </section><!-- End Breadcrumbs -->
  
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> 
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  
  <div class="container">
      <br>
      <br>
    <div class="section-title">
        <h2>Search</h2>
        <p>Advanced Search</p>
      </div>
  </div>
  <!--Advance Search-->
  <div class="container text-center">
      
 
	<div id="search">
		<form id="search-form" action="" method="POST" enctype="multipart/form-data">
    
			<div class="form-group col-12">
				<input class="form-control" type="text" placeholder="Search" value="<%= movieTitle %>" />
			</div>
			<center><div class="form-group col-5 ">
				<button type="submit" class="btn btn-block btn-danger">Search</button>
			</div>
        </center>
		</form>
   
	</div>
    
	<div class="" id="filter">
		<form>
			
			
        <div class="row">
            <div class="form-group col-sm-4 col-xs-6">
				<select data-filter="language" class="filter-make filter form-control">
					<option value="">Select Language</option>
					<option value="English">English</option>
                    <option value="Russian">Russian</option>
                    <option value="Hindi">Hindi</option>
                    <option value="Spanish">Spanish</option>

				</select>
			</div>
			<div class="form-group col-sm-4 col-xs-6">
				<select data-filter="type" class="filter-type filter form-control">
					<option value="">Select Year</option>
					<option value="2021">2021</option>
                    <option value="2020">2020</option>
                    <option value="2019">2019</option>
                    <option value="2018">2018</option>
                    <option value="2017">2017</option>

				</select>
			</div>
          
			<div class="form-group col-sm-4 col-xs-6">
                <label>Rating: 0</label>
				<input type="range" id="movieRating" name="points" min="0" max="10" step="0.1">
                <label>10</label>
			</div>
            
        </div>
		</form>
	</div>
</div>
<div class="container">
    <div class="container">
        <br>
        <br> <br>
        <br>
      <div class="section-title">
          <h2>Search</h2>
          <p>Search Results</p>
        </div>
    </div>
    <section id="latest-movies" class="portfolio">
	<div class="row portfolio-container">
        <% data.movies.forEach(item=> { %>
        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
          <div class="portfolio-wrap">
            <img src="http://image.tmdb.org/t/p/w400/<%=item.posterPath %>" class="img-fluid" alt="">
            <div class="portfolio-info">
              <h4><%=item.title %></h4>
              <p class="max-lines"><%=item.overview %></p>
              <div class="portfolio-links">
                <a href="http://image.tmdb.org/t/p/w400/<%=item.posterPath %>" data-gall="portfolioGallery" class="venobox" title="App 1"><i class="bx bx-plus"></i></a>
                <a onclick='movieSelected("<%=item.id %>")' href="#" data-gall="portfolioDetailsGallery" data-vbtype="iframe" title="Portfolio Details"><i class="bx bx-link"></i></a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
        
       

    

      </div>
    </div>
      </section>
</div>

<script src="js/movie.js"></script>
<%- include('partials/footer.ejs'); %>