<%- include('partials/side-navigation.ejs'); %>
<div id="body" class="active">
    <%- include('partials/top-navigation.ejs'); %>
        <table align="center" >
                  <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Overview</th>
                        <th>Release Date</th>
                        <th>Vote Average</th>
                        <th>Vote Count</th>
                        <th>Language</th>
                        <th>Poster Path</th>
                </tr>
                <% data.movies.forEach(item=>{ %>
                        <tr>
                                <form action="/update/<%= item._id %>" method="POST" name="movieform" id="movieform">

                                        <td>
                                                <label type="text" name="id" value="<%=item.id %>" size="5"><%=item.id %></label>
                                        </td>
                                        <td>
                                                <input type="text" name="title" value="<%=item.title %>" size="20">
                                        </td>
                                        <td>
                                                <input type="text" name="overview" value="<%=item.overview %>" size="40">
                                        </td>
                                        <td>
                                                <input type="text" name="releaseDate" value="<%=item.releaseDate %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input type="number" name="voteAverage" value="<%=item.voteAverage %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input type="number" name="voteCount" value="<%=item.voteCount %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input type="text" name="language" value="<%=item.language %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input type="text" name="posterPath" value="<%=item.posterPath %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input type="submit" value="Update">
                                        </td>
                                </form>
                        </tr>
                        </tr>
                        <% } )%>
        </table>
</div>
<%- include('partials/footer.ejs'); %>