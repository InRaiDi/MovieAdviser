<%- include('partials/side-navigation.ejs'); %>
<div id="body" class="active">
    <%- include('partials/top-navigation.ejs'); %>
    <div class="col-md-12 col-lg-12">
        <div class="card">
                <div class="card-header">Update All Movies</div>
                                <div class="card-body">
                                    <p class="card-title"></p>
        <table  class="table table-hover" align="center" >
                  <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Overview</th>
                        <th>Release Date</th>
                        <th>Vote Average</th>
                        <th>Vote Count</th>
                        <th>Language</th>
                        <th>Poster Path</th>
                </tr>
                <% data.movies.forEach(item=>{ %>
                        <tr>
                                <form action="/update/<%= item._id %>" method="POST" name="movieform" id="movieform">

                                        <td>
                                                <input class="form-control" type="text" name="id" value="<%=item.id %>" size="5">
                                        </td>
                                        <td>
                                                <input class="form-control" type="text" name="title" value="<%=item.title %>" size="20">
                                        </td>
                                        <td>
                                                <input class="form-control" type="text" name="overview" value="<%=item.overview %>" size="40">
                                        </td>
                                        <td>
                                                <input class="form-control" type="text" name="releaseDate" value="<%=item.releaseDate %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input class="form-control" type="number" name="voteAverage" value="<%=item.voteAverage %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input class="form-control" type="number" name="voteCount" value="<%=item.voteCount %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input class="form-control" type="text" name="language" value="<%=item.language %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input class="form-control" type="text" name="posterPath" value="<%=item.posterPath %>" style="width: 80px">
                                        </td>
                                        <td>
                                                <input class="form-control btn btn-danger" type="submit" value="Update">
                                        </td>
                                </form>
                        </tr>
                        </tr>
                        <% } )%>
        </table>
        </div>
        </div>
        </div>
        </div>
</div>
<%- include('partials/footer.ejs'); %>